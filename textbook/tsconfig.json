{
  // You might need to extend the default Docusaurus tsconfig here
  "extends": "@docusaurus/tsconfig",
  
  "compilerOptions": {
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "baseUrl": ".", // Use current directory as base
    "paths": {
      // CRITICAL FIX: Map the @site alias to the current directory
      "@site/*": ["./*"] 
    }
  },
  "include": ["src", "types"],
  "exclude": [
    "node_modules", 
    "build", 
    ".cache"
  ]
}