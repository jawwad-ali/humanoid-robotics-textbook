{
  // Extending the Docusaurus base config is the best practice
  "extends": "@docusaurus/tsconfig",
  
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    
    // CRITICAL: Set Module Resolution for Docusaurus modules
    "module": "ESNext",
    "moduleResolution": "Node", 
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    
    "baseUrl": ".",
    
    // CRITICAL FIX: Define the path aliases Docusaurus uses
    "paths": {
      "@docusaurus/theme-common": ["./node_modules/@docusaurus/theme-common"],
      "@docusaurus/*": ["./node_modules/@docusaurus/*"],
      "@site/*": ["./*"],
      "@generated/*": ["./.docusaurus/*"]
    }
  },
  // Ensure the TypeScript compiler checks the source code
  "include": [
    "src",
    "types",
    "**/*.ts",
    "**/*.tsx",
    "types"
  ]
}